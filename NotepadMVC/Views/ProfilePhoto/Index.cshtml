@model ProfilePhotoViewModel
@{
    ViewData["Title"] = "Profile Photo";
}
<h1>Profile Photo</h1>

@if (Model.Uploaded)
{
    <div class="alert alert-success">
        Selected image is successfully loaded.
    </div>
}

<div class="d-flex">
    <div class="text-center">
            <vc:profile-photo width1="200" height1="200" class1=""/>
        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <form asp-controller="ProfilePhoto" asp-action="DeletePhoto" method="post">
                <button class="btn btn-link">Delete Photo</button>
            </form>
        }

    </div>

    <form method="post" class="p-5" enctype="multipart/form-data">
        <label for="photo">Adding Photo :</label> <br />
        <input type="file" accept="image/*" name="photo" id="photo" />
        <button class="btn btn-outline-primary">Add Photo</button>
        <div class="text-danger">
            @Html.ValidationMessage("photo")
        </div>
    </form>

</div>
