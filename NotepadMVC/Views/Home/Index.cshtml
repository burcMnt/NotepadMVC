@model List<Note>
@{
    ViewData["Title"] = "My Notepad";
}

<a asp-controller="Notes" asp-action="Yeni" class="btn btn-primary"> Add new note </a>

@if (Model.Count==0)
{
 <p>Sorry, There is not any note to show you :( </p>
}
else
{
    <ul>
        @foreach (Note note in Model)
        {
            <li>
                <strong>@note.Title</strong><br />
                @note.Content
            </li>
        }
    </ul>
}


